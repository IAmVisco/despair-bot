{
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "env": {
    "es2020": true,
    "node": true
  },
  "rules": {
    "import/prefer-default-export": "off",
    "import/extensions": "off",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error"],
    "no-unused-expressions": ["error", { "allowTernary": true }],
    "max-len": ["error", 120]
  },
  "settings": {
    "import/resolver": {
      "typescript": { }
    }
  }
}
